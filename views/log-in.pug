extends layout

block content
    form(class='p-3' method='post' action='/log-in')
        div.form-group(class='mb-3')
            label.form-label(for='username') Username
            input#username.form-control(type='text' name='username')
        div.form-group(class='mb-3')
            label.form-label(for='password') Password
            input#password.form-control(type='text' name='password')
        button.btn.btn-dark(type='submit' class='mt-3') Log In